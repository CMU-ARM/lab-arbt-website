#photos {
  width: 760px;
	margin-top: 15px;
	text-align:center;
}

#photos span {
	display: inline-block;
	width: 150px;
	margin: 15px 10px;
}

#photos img {
	border: 2px solid #3e5c23;
}

#movie_container {
  width: 725px;
  height: 310px;
	margin-top: 15px;
	text-align:center;
}

#movie {
	float:right; 
	text-align:center; 
	width:425px; 
	margin-bottom: 15px;
}

#movieNav {
	float:left; 
	width:275px; 
	border: solid 1px #aaa;
}

#movieNav a {
	display: inline-block;
	margin: 2px 5px 2px 5px;
	cursor: pointer;
}

#movieNav a:hover {
  cursor: pointer; 
  color: #FFFFFF; 
  background-color: lightslategray; 
  text-decoration: none
}


